{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug demotest-2",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/demotest-2",  // 可执行文件路径
        "args": [],                                // 传给程序的命令行参数
        "stopAtEntry": false,                     // 是否在 main() 首行停下
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,                  // false 用 VS Code 内置终端
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",         // gdb 可执行路径
        "preLaunchTask": "Build demotest",        // 调试前自动编译
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  