{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build demotest",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",                          // 产生调试信息
          "-std=c++20",
          "-Wall", "-Wextra",
          "-Iinclude",
          "src/*.cpp", "tests/demotest-2.cpp",
          "-pthread",
          "-o", "demotest-2"
        ],
        "group": { "kind": "build", "isDefault": true },
        "problemMatcher": ["$gcc"]
      }
    ]
}
  